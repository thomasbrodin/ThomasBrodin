{% block header %}
    
        <header id="main-nav" class="navbar" role="navigation">
                
                <div id="logo">
                    <a href="/" rel="home">
                        <h1>{{bloginfo('name')}}</h1>
                    </a>
                </div><!-- logo-->
                
                <div id="nav-icons">
                    
                    <div id="menu-button" class="si-icons-default">
                       <span id="trigger-overlay" class="si-icons si-icon si-icon-hamburger-cross" data-icon-name="hamburgerCross"></span>
                    </div><!-- menu-button-->

                    <div id="sb-search" class="sb-search hide-mobile">
                        <form class="search" action="{{site.url}}" method="get" role="search">
                            <input type="text" name="s" class="sb-search-input" type="text" value="" id="search">
                            <input class="sb-search-submit" type="submit" value="">
                            <span class="sb-icon-search"></span>
                         </form>
                    </div><!-- search-->
                
                </div><!-- nav-icons-->

        </header><!-- header-->

         <div id="main-nav-content" role="navigation" class="overlay">
            <nav>
                <ul id="menu-main-nav" class="nav">
                {% for item in menu.get_items %}
                    <li class="nav-main-item{{item.current ? ' active'}}{% if cpt_current == item.title %} active{% endif %}">
                        <a href="{{item.get_path}}">{{item.title}}</a>
                    </li>
                {% endfor %}
                </ul>
            </nav>
        </div><!-- /.overlay nav -->

{% endblock %}