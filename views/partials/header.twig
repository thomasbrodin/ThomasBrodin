{% block header %}

        <header id="main-nav" class="navbar" role="navigation">

                <div id="logo" class="logo-svg">
                    <a class="btn-link" href="/" rel="home">
                        <h1>{{bloginfo('name')}}</h1>
                        {% include 'app/img/T.svg' %}
                    </a>
                </div><!-- logo-->

                <div id="nav-icons">

                     <div id="trigger-overlay">
                        <i class="hamburger"></i>
                    </div><!-- menu-button-->

                    <nav id="menu" class="menu">
                        <ul id="menu-main-nav" class="nav">
                        {% for item in menu.items %}
                            <li class="nav-main-item {{item.current ? ' active'}}{% if cpt_current == item.title %} active{% endif %} {{ item.classes|join(' ') }}">
                                <a class="nav" {{ item.is_external ? 'target="_blank"' }} href="{{item.get_path}}">{{item.title}}</a>
                            </li>
                        {% endfor %}
                        </ul>
                    </nav>

                </div><!-- nav-icons-->

        </header><!-- header-->

        <div id="main-nav-content" role="navigation" class="overlay">
            <nav>
                <ul id="menu-main-nav" class="nav">
                {% for item in menu.get_items %}
                    <li class="nav-main-item{{item.current ? ' active'}}{% if cpt_current == item.title %} active{% endif %}">
                        <h6>{{ item.description }}</h6>
                        <h1><a href="{{item.get_path}}">{{item.title}}</a></h1>
                    </li>
                {% endfor %}
                </ul>
            </nav>
        </div><!-- /.overlay nav -->

{% endblock %}
